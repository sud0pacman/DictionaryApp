<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_item_word"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="1dp">

    <TextView
        android:id="@+id/word1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/black"
        tools:text="Aback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/word2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ic_volume"
        android:textSize="16sp"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginVertical="4dp"
        />


    <TextView
        android:id="@+id/word2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/black"
        tools:text="ajablanmoq"
        app:layout_constraintTop_toBottomOf="@id/word1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ic_volume"
        android:textSize="14sp"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/roboto_italic"
        android:layout_marginVertical="4dp"
        />


    <ImageView
        android:id="@+id/ic_volume"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/round_volume_up_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ic_delete"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:padding="8dp"
        android:background="?selectableItemBackgroundBorderless"
        android:backgroundTint="@android:color/transparent"
        />


    <ImageView
        android:id="@+id/ic_delete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:padding="8dp"
        android:background="?selectableItemBackgroundBorderless"
        android:backgroundTint="@android:color/transparent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>